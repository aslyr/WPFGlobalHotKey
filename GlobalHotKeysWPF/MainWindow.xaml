<Window x:Class="GlobalHotKeysWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobalHotKeysWPF"
        mc:Ignorable="d"
        Title="全局热键设置" Height="400" Width="400">
    <Grid>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox IsReadOnly="True" PreviewKeyUp="hotkeyTextBox_PreviewKeyUp" PreviewKeyDown="hotkeyTextBox_PreviewKeyDown" x:Name="hotkeyTextBox"  Height="100" Width="300" Background="LightBlue" />


            <Button Content="应用热键" Click="Button_Click" Height="30" Width="100" Margin="10"/>
            <Button Content="移除热键" Click="Button_Click_1" Height="30" Width="100" Margin="10"/>
            <TextBox x:Name="StatusTextBox" IsReadOnly="True" PreviewKeyUp="hotkeyTextBox_PreviewKeyUp" PreviewKeyDown="hotkeyTextBox_PreviewKeyDown" Height="100" Width="300" Background="LightBlue" />

        </StackPanel>

      
    </Grid>
</Window>
